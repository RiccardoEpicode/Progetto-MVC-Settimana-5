@model List<PoliziaMunicipale.Models.TipoViolazione>

@{
    ViewData["Title"] = "Violazioni";
}

<h2>Tipi di Violazione</h2>

<a class="btn btn-primary mb-3" href="/TipoViolazione/Create">Nuova Violazione</a>

<table class="table table-striped">
    <tr>
        <th>ID</th>
        <th>Descrizione</th>
        <th></th>
    </tr>

    @foreach (var t in Model)
    {
        <tr>
            <td>@t.IdViolazione</td>
            <td>@t.Descrizione</td>
            <td>
                <a class="btn btn-warning btn-sm" href="/TipoViolazione/Edit/@t.IdViolazione">Modifica</a>
                <a class="btn btn-danger btn-sm" href="/TipoViolazione/Delete/@t.IdViolazione">Elimina</a>
            </td>
        </tr>
    }
</table>
