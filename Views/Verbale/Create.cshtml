@model PoliziaMunicipale.Models.Verbale

@{
    ViewData["Title"] = "Nuovo Verbale";
}

<h2>Nuovo Verbale</h2>

<form asp-action="Create" asp-controller="Verbale" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        <label asp-for="IdAnagrafica"></label>
        <select asp-for="IdAnagrafica" class="form-control" asp-items="ViewBag.Anagrafiche"></select>
    </div>

    <div class="form-group mb-3">
        <label asp-for="IdViolazione"></label>
        <select asp-for="IdViolazione" class="form-control" asp-items="ViewBag.TipiViolazione"></select>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DataViolazione"></label>
        <input asp-for="DataViolazione" type="date" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="IndirizzoViolazione"></label>
        <input asp-for="IndirizzoViolazione" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Nominativo_Agente"></label>
        <input asp-for="Nominativo_Agente" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="DataTrascrizioneVerbale"></label>
        <input asp-for="DataTrascrizioneVerbale" type="date" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Importo"></label>
        <input asp-for="Importo" type="number" class="form-control" step="0.01" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="DecurtamentoPunti"></label>
        <input asp-for="DecurtamentoPunti" type="number" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success mt-3">Salva Verbale</button>
</form>
