<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Progetto_Settimanale</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/_Layout.css" asp-append-version="true" />
</head>
<body>
    <header>

        <!-- ===== TOP NAV BAR (WHITE) ===== -->
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom">
            <div class="container-fluid">

                <!-- LEFT: HOME + PRIVACY -->
                <div class="d-flex">
                    <ul class="navbar-nav">
                        <!-- BRAND / LOGO CENTER -->
                        <a class="navbar-brand mx-auto d-none d-sm-block"
                           asp-controller="Home" asp-action="Index"
                           style="font-weight:bold;">
                            Polizia di Roma
                        </a>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-bold"
                               asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark"
                               asp-controller="Home" asp-action="Contacts">Contacts</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- ===== SECOND NAV BAR (BLACK) ===== -->
        <nav class="navbar navbar-expand-sm navbar-dark bg-black">
            <div class="container-fluid">

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#bottomNavbar" aria-controls="bottomNavbar"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="bottomNavbar">
                    <ul class="navbar-nav mx-auto">

                        <li class="nav-item">
                            <a class="nav-link text-white"
                               asp-controller="Anagrafica" asp-action="Index">Trasgressori</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white"
                               asp-controller="TipoViolazione" asp-action="Index">Tipi Violazione</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white"
                               asp-controller="Verbale" asp-action="Index">Verbali</a>
                        </li>

                        <!-- DROPDOWN REPORT -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="reportMenu"
                               role="button" data-bs-toggle="dropdown">Report</a>

                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Report" asp-action="VerbaliPerTrasgressore">Verbali per Trasgressore</a></li>
                                <li><a class="dropdown-item" asp-controller="Report" asp-action="PuntiPerTrasgressore">Punti decurtati per Trasgressore</a></li>
                                <li><a class="dropdown-item" asp-controller="Report" asp-action="PuntiOltreDieci">Violazioni oltre 10 punti</a></li>
                                <li><a class="dropdown-item" asp-controller="Report" asp-action="ImportoOltre400">Violazioni oltre 400€</a></li>
                            </ul>
                        </li>

                    </ul>
                </div>

            </div>
        </nav>

    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Progetto_Settimanale - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
